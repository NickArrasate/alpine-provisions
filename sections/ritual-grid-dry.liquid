{%- assign product_1 = all_products[section.settings.product_1] -%}
{%- assign current_variant_1 = product_1.selected_or_first_available_variant -%}
{%- assign featured_image_1 = current_variant_1.featured_image | default: product_1.featured_image -%}

{%- assign product_2 = all_products[section.settings.product_2] -%}
{%- assign current_variant_2 = product_2.selected_or_first_available_variant -%}
{%- assign featured_image_2 = current_variant_2.featured_image | default: product_2.featured_image -%}

{%- assign product_3 = all_products[section.settings.product_3] -%}
