<div class="page-width">
<div class="row">
  <div class="col-sm-6 collection-card ritual-card text-center has-bottom-bar">
  <div class="card-title-box">
        <h2 class="ritual-product-title"><span class="ritual-title-number">1</span>{{ section.settings.title_1  }}</h2>
        <p class="ritual-product-subtitle">{{ section.settings.subtitle_1 }}</p>
        </div>
  {% if featured_image_1.src != blank %}
    <a href="{{ product_1.url }}">
        {% include 'responsive-image' with
          image: featured_image_1,
          max_width: 700,
          max_height: 800
        %}
        </a>
  {% endif %}
  <div class="card-button-box">
  <p>{{ product_1.title | default: onboarding_title | replace: '-', '<br/>' }}</p>
  <a class="btn collection-product-button subtle" href="{{ product_1.url | within: collection }}">
    {% if product_1.available %}
      {% if product_1.compare_at_price > product_1.price %}

        {% if product_1.price_varies %}
          {%- assign sale_price = product_1.price | money -%}
          {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
        {% else %}
          {{ 'products.product.on_sale' | t }}
          {{ product_1.price | money }}
        {% endif %}

      {% else %}

      {% if product_1.price_varies %}
        {%- assign price = product_1.price | money -%}
        {{ 'products.product.from_text_html' | t: price: price }}
      {% else %}
        {{ product_1.price | money }}
      {% endif %}

    {% endif %}

    {% if product_1.compare_at_price > product_1.price %}
      <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
      <s>{{ product_1.compare_at_price | money }}</s>
    {% endif %}

    {% else %}
      {{ 'products.product.sold_out' | t }}
    {% endif %}
  </a>
  </div>
