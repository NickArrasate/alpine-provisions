<div class="row">
<div class='col-sm-4 cherry-picking'>
  <h4>{{section.settings.heading}}</h4>
  <div class='inside row'>
    <div class='col-4'>
      <img class='lazyload' alt="Shopping Bag" src="{{ 'shopping-bag.png' | asset_url }}"/>
    </div>
    <div class='col-8 copy'>
      <p>{{section.settings.copy}}</p>
    </div>
    <p class='small'>{{section.settings.sub}}</p>
  </div>
</div>
</div>
{% schema %}
  {
  "name": "Cart Cherry Pick",
  "class": "brand-logos",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Cherry Pick Box heading",
        "default": "Cherry Picking is highly encouraged!"
    },
    {
        "type": "text",
        "id": "copy",
        "label": "Cherry Pick Box copy",
        "default": "Shop other brands in the Pangea family and add items to the same basket or bundle.* "
    },
    {
        "type": "text",
        "id": "sub",
        "label": "Cherry Pick Box sub-copy",
        "default": "*One discount per basket"
    }
    ],
  "presets": [
  {
    "name": "Cart Cherry-pick",
    "category": "Cart"
    }
  ]
}
{% endschema %}