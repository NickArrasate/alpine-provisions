


<div class="col-sm-6 text-center collection-card ritual-card">
    <div class="card-title-box">
      <h2 class="ritual-product-title"><span class="ritual-title-number">4</span>{{ section.settings.title_4 }}</h2>
      <p class="ritual-product-subtitle">{{ section.settings.subtitle_4 }}</p>
    </div>
{% if section.blocks.size <= 1 %}
<div class="">
  {% for block in section.blocks %}
  {%- assign block_product = all_products[block.settings.custom_product] -%}
  {%- assign current_variant = block_product.selected_or_first_available_variant -%}
  {%- assign featured_image = current_variant.featured_image | default: block_product.featured_image -%}
        {% include 'responsive-image' with
          image: featured_image,
          max_width: 700,
          max_height: 800
        %}
        <div class="card-button-box">
      <p>{{ block_product.title | default: onboarding_title }}</p>
      <a class="btn collection-product-button" href="{{ block_product.url | within: collection }}">
        {% if block_product.available %}
          {% if block_product.compare_at_price > block_product.price %}

            {% if block_product.price_varies %}
              {%- assign sale_price = block_product.price | money -%}
              {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
            {% else %}
              {{ 'products.product.on_sale' | t }}
              {{ block_product.price | money }}
            {% endif %}

          {% else %}

          {% if block_product.price_varies %}
            {%- assign price = block_product.price | money -%}
            {{ 'products.product.from_text_html' | t: price: price }}
          {% else %}
            {{ block_product.price | money }}
          {% endif %}

        {% endif %}

        {% if block_product.compare_at_price > block_product.price %}
          <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
          <s>{{ block_product.compare_at_price | money }}</s>
        {% endif %}

        {% else %}
          {{ 'products.product.sold_out' | t }}
        {% endif %}
      </a>
      </div>
    </div>
  {% endfor %}

{% elsif section.blocks.size == 2 %}
<div class="container text-center my-3">
    <div class="row mx-auto my-auto">
    {% for block in section.blocks %}
              {%- assign block_product = all_products[block.settings.custom_product] -%}
              {%- assign current_variant = block_product.selected_or_first_available_variant -%}
              {%- assign featured_image = current_variant.featured_image | default: block_product.featured_image -%}
                <div class="col-6">
                    <div class="product-slider-image" >
                    {% include 'responsive-image' with
                      image: featured_image,
                      max_width: 700,
                      max_height: 800
                    %}
                    </div>
                  <p>{{ block_product.title | default: onboarding_title }}</p>
                  <a class="btn collection-product-button" href="{{ block_product.url | within: collection }}">
                    {% if block_product.available %}
                      {% if block_product.compare_at_price > block_product.price %}

                        {% if block_product.price_varies %}
                          {%- assign sale_price = block_product.price | money -%}
                          {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
                        {% else %}
                          {{ 'products.product.on_sale' | t }}
                          {{ block_product.price | money }}
                        {% endif %}

                      {% else %}

                      {% if block_product.price_varies %}
                        {%- assign price = block_product.price | money -%}
                        {{ 'products.product.from_text_html' | t: price: price }}
                      {% else %}
                        {{ block_product.price | money }}
                      {% endif %}

                    {% endif %}

                    {% if block_product.compare_at_price > block_product.price %}
                      <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                      <s>{{ block_product.compare_at_price | money }}</s>
                    {% endif %}

                    {% else %}
                      {{ 'products.product.sold_out' | t }}
                    {% endif %}
                  </a>
                </div>
              {% endfor %}
    </div>
</div>

{% else %}
<div class="container text-center my-3">
    <div class="row mx-auto my-auto">
        <div id="dualCarousel" class="dual-carousel carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner w-100" role="listbox">
              {% for block in section.blocks %}
              {%- assign block_product = all_products[block.settings.custom_product] -%}
              {%- assign current_variant = block_product.selected_or_first_available_variant -%}
              {%- assign featured_image = current_variant.featured_image | default: block_product.featured_image -%}
                <div class="carousel-item {% if forloop.first %}active{% endif %}">
                <div class="col-6">
                    <div class="product-slider-image" >
                    {% include 'responsive-image' with
                      image: featured_image,
                      max_width: 700,
                      max_height: 800
                    %}
                    </div>
                  <p>{{ block_product.title | default: onboarding_title }}</p>
                  <a class="btn collection-product-button" href="{{ block_product.url | within: collection }}">
                    {% if block_product.available %}
                      {% if block_product.compare_at_price > block_product.price %}

                        {% if block_product.price_varies %}
                          {%- assign sale_price = block_product.price | money -%}
                          {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
                        {% else %}
                          {{ 'products.product.on_sale' | t }}
                          {{ block_product.price | money }}
                        {% endif %}

                      {% else %}

                      {% if block_product.price_varies %}
                        {%- assign price = block_product.price | money -%}
                        {{ 'products.product.from_text_html' | t: price: price }}
                      {% else %}
                        {{ block_product.price | money }}
                      {% endif %}

                    {% endif %}

                    {% if block_product.compare_at_price > block_product.price %}
                      <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                      <s>{{ block_product.compare_at_price | money }}</s>
                    {% endif %}

                    {% else %}
                      {{ 'products.product.sold_out' | t }}
                    {% endif %}
                  </a>
                </div>
                </div>
              {% endfor %}

            </div>
            {% unless section.blocks.size <= 2 %}
            <a class="carousel-control-prev" href="#dualCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#dualCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            {% endunless %}
        </div>
    </div>
</div>
{% endif %}

</div>
